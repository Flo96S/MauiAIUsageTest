<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIUsageTestBingCopilot.Views.ShoppingItem">
    
    <!-- Bing Copilot generated code for Xamarin -->
    <!-- Create a StackPanel to arrange the elements vertically --><!--
    <StackPanel> 
        --><!-- Create a Label with Text Binding to the Name property --><!--
        <Label Content="{Binding Name}" FontSize="Large" />

        --><!-- Create another Label with Text Binding to the Quantity property --><!--
        <Label Content="{Binding Quantity}" FontSize="Large" />

        --><!-- Create a Button with a Click event handler --><!--
        <Button Content="Click Me" Click="Button_Click" />
    </StackPanel>-->
    
    <!-- Changed everything by hand -->
    <Grid BackgroundColor="SlateGray" ColumnDefinitions="*,*,*" Padding="16,0">
        <Label Text="{Binding Name}" Grid.Column="0" VerticalTextAlignment="Center"/>
        <Label Text="{Binding Quantity}" Grid.Column="1" VerticalTextAlignment="Center"/>
        <Button Text="Delete" Grid.Column="2"/>
    </Grid>
</ContentView>
