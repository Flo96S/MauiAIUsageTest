<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIUsageTestGitHubCopilot.MainPage"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:AIUsageTestGitHubCopilot.ViewModels"
             xmlns:views="clr-namespace:AIUsageTestGitHubCopilot.Views">

    <ContentPage.BackgroundImageSource>
        <FileImageSource File="background.webp"/>
    </ContentPage.BackgroundImageSource>

    <ContentPage.Content>
        <StackLayout BackgroundColor="#F5444455"> <!-- Added background by hand -->
            <Button Text="Add Product" Command="{Binding AddProductCommand}" HeightRequest="56"/>
            <StackLayout BindableLayout.ItemsSource="{Binding ShoppingList}" Spacing="8" Margin="0,16,0,0"> <!-- Added Spacing and Margin by hand -->
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <!-- Your item template UI here -->
                        <views:ShoppingItem BindingContext="{Binding}"/> <!-- Added by hand -->
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

    <!--<Shell.NavigationBarIsVisible>
        <x:Boolean>False</x:Boolean> Generated by GitHub Copilot Chat
    </Shell.NavigationBarIsVisible>-->
    
    
    <!-- This took one hour and three minutes. I'm still no professional with AI tools so with some more experience this could be way faster -->

</ContentPage>
